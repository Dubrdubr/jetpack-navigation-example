<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="ru.dubr.jetpacknavigation.RootFragment">

    <Button
        android:id="@+id/openGreenBoxButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#007F00"
        android:text="@string/green_box"/>

    <Button
        android:id="@+id/openYellowBoxButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FF00"
        android:textColor="@color/black"
        android:text="@string/yellow_box" />

</LinearLayout>